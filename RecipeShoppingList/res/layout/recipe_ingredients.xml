<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#E6E6E6" >
<TextView
    android:id="@+id/serving_size"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/serving_size"
    android:layout_centerHorizontal="true"
    />
<TextView
     android:id="@+id/recipe_serving"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
     android:layout_below="@id/serving_size"
   />
<LinearLayout 
        android:id="@+id/re_list_lay"
        android:layout_below="@id/recipe_serving"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin">
        <ListView 
            android:id="@+id/recipe_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></ListView>
    </LinearLayout>
    <Button
        android:id="@+id/remove_itemR"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="-"/>
    <Button 
     android:id="@+id/rrsubmit"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/create_button"
     android:layout_margin="5dp"
     android:background="#00CC00"
     android:minHeight="0dp"
     android:minWidth="0dp"
     android:layout_centerHorizontal="true"
     android:layout_alignParentBottom="true"
     />
</RelativeLayout>
